<%= bootstrap_form_with url: topic_post_ratings_path(params[:topic_id],params[:post_id] || params[:id]),html:{class: 'rating-form'}  do |form| %>
  <% if rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.radio_button :rating, 1, label: '1' %>
    <%= form.radio_button :rating, 2, label: '2' %>
    <%= form.radio_button :rating, 3, label: '3' %>
    <%= form.radio_button :rating, 4, label: '4' %>
    <%= form.radio_button :rating, 5, label: '5' %>
  </div>
  <%if not params.has_key?(:topic_id) %>
    <div class="field">
      <%= form.collection_select :post_id, @post , :id ,:title %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
