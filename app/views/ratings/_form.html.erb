<%= bootstrap_form_with url: topic_post_ratings_path(params[:topic_id],params[:post_id] || params[:id]),html:{class: 'rating-form'},local:true  do |form| %>
  <%= render(partial: "layouts/error_display",locals: {error_display: rating}) %>
  <div class="field">
    <%= form.radio_button :rating, 1, label: '1' %>
    <%= form.radio_button :rating, 2, label: '2' %>
    <%= form.radio_button :rating, 3, label: '3' %>
    <%= form.radio_button :rating, 4, label: '4' %>
    <%= form.radio_button :rating, 5, label: '5' %>
  </div>
