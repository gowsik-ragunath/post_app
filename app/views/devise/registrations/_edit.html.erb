<%= form_for(resource, as: resource_name, url: registration_path(resource_name),remote: true , html: { method: :put }) do |f| %>
  <%= render(partial: "shared/error_display",locals: {error_display: resource}) %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
    <small class="error_small" id="error_email"><%= resource.errors.full_messages_for(:email).join(', ') if resource.errors.has_key?(:email) %></small>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)<small>
    <% if @minimum_password_length %>
      <%= @minimum_password_length %> characters minimum</small>
    <% end %></i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    <small class="error_small" id="error_password"><%= resource.errors.full_messages_for(:password).join(', ') if resource.errors.has_key?(:password) %></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
    <small class="error_small" id="error_password_confirmation"><%= resource.errors.full_messages_for(:password_confirmation).join(', ') if resource.errors.has_key?(:password_confirmation) %></small>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" ,class:"form-control"%>
    <small class="error_small" id="error_current_password"><%= resource.errors.full_messages_for(:current_password).join(', ') if resource.errors.has_key?(:current_password) %></small>
  </div>


  <div class="form-group">
    <%= f.submit "Update",class:"form-field btn btn-primary" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
