$('#flash-notice').hide();
$('#flash-alert').hide();
<% if @post.errors.any? %>
  $("#error_explanation").remove();
  $(document).find("#new_post").prepend('<%= j render(partial: "layouts/error_display",locals: {error_display: @post  }, :formats => [:html]) %>');
  $('#errortitle').html(' <%=  @post.errors.full_messages_for(:title).join(', ') %> ');
  $('#errorbody').html(' <%=  @post.errors.full_messages_for(:body).join(', ') %> ');
  $('#errorimage').html(' <%=  @post.errors.full_messages_for(:image).join(', ') %> ');
<% else %>
  $('#new_post').remove();
  $('#new_link').show();
  $('#list-post').prepend("<%= j render(partial: "post", locals: {f: @post})   %>");
  $('#flash-alert').show();
  alert("Post created successfully");
<% end %>