<div class="container">
	<h1 class="text-center">New Post</h1>
	<div class="row">
		<div class="col-sm-6 offset-md-3">
			<%= bootstrap_form_for @post do |p| %>
				<%= p.text_field(:title) %>
				<%= p.text_field(:body) %>
				<%= p.submit('create') %>
			<% end %>
			
		</div>
		<div class="col-sm-6"></div>
	</div>

</div>