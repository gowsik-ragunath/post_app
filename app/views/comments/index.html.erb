<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-6">
<h1>Comments</h1>

<table class="table table-border">
    <thead>
    <tr>
      <th>Commenter</th>
      <th>Body</th>
      <th>Posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
        <td><%= comment.post.id %></td>
        <% if can? :update , comment  %>
          <td><%= link_to 'Edit', edit_topic_post_comment_path(params[:topic_id],params[:post_id],comment) %></td>
        <% end %>
        <% if can? :destroy , comment %>
          <td><%= link_to 'Destroy', topic_post_comment_path(params[:topic_id],params[:post_id],comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_topic_post_comment_path %>

</div>
</div>
</div>